<body>
    

<div id="main-content">
    <h2>All Product Records</h2>
    <form action="" method="get">
            <input type="text" name="search" placeholder="Search by Category Name">
    <input type="submit" value="Search" style="background-color:greenyellow">

    </form>
    <form method="POST" action="deletemultipleproduct.php" id="deleteForm">
        

        <table cellpadding="7px">
            <thead>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category Name</th>
                <th>Image</th>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{produnct_name}}</td>
                    <td>{{price}}</td>
                    <td>{{quantity}}</td>
                    <td>{{cname}}</td>
                    <td>
                        <img src="images/{{product_image}}" width="30px" height="25px" title="{{product_image}}">
                    </td>
                    <td>
                        <input type="checkbox" name="selected[]" value="{{prod_id}}">
                    </td>
                    <td>
                        <a href="editproduct?param1={{prod_id}}&param2={{cname}}">Edit</a>
                        <a href="deleteproduct?id={{prod_id}}&param2={{ cname}}" onclick="return checkdelete()">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <input type="submit" name="delete" value="Delete Selected" style="background-color: red;">
    </form>
