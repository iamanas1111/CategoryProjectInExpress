<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Category Management</title>
    </head>
    
    <body>

        <div class="container">
            <h1 class="mt-5 mb-5 text-center text-primary"><b>Category Management</b></h1>

            <div class="row mt-5">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                {{#if session.user_name}}

                    {{!-- <h1>Hi User, Welcome</h1>

                 a   <a href="/logout" class="btn btn-primary">Logout</a> --}}

                {{else}}

                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            <form method="post" action="/login">
                                <input type="hidden", name="_csrf", value= {{csrfToken}}>

                                <div class="mb-3">
                                    <label>Username</label>
                                    <input type="email" name="user_name" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label>Password</label>
                                    <input type="password" name="password" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="Login" />
                                </div>
                                <div class="col-md-9">
                                    <div class="row">
                                    <ul>
                                        Don't Have An Account
                                        <a href="/signuppage">Sign Up</a>
                                    </ul>
                                    
                                    <ul>
                                        Continue with Google.... 
                                        <a href="/auth/google">
                                        <img src="images/btn_google_signin_dark_pressed_web@2x.png" alt="Google Logo" width="150" height="50">
                                       
                                        </a>
                                    </ul>

                                    <ul>
                                        Continue with Facebook
                                        <a href="/auth/facebook">
                                        <img src="images/294967112_614766366879300_4791806768823542705_n.png" alt="Google Logo" width="150" height="50">
                                       
                                        </a>
                                    </ul>
                                    

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>

                {{/if}}
                </div>
            </div>
        </div>
    </body>
</html>
