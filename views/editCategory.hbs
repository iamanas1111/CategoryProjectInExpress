<body>


    <div id="main-content">
        <h2>Update Category</h2>
        
        <h3 style="text-align:center; color: red;">{{error_message}}</h3>

        <form class="post-form" action="/editCategory" method="post">
           {{#each categories}}
            <div class="form-group">
                <label>Category Name</label>
                <input type="hidden" name="id" value="{{this.id}}" />
                <input type="text" name="cname" value="{{this.cname}}" />
                <input type="hidden" name="original_cname" value="{{this.cname}}">
            </div>
            {{/each}}
            <div class="form-group">
                <label>Parent Category</label>
                        <select name="pname" required>
                            {{#each parentCategories}}
                            <option value="{{this.id}}" {{#if selected}}selected{{/if}}>{{cname}}</option>
                            {{/each}}
                        </select>
                    
            </div>

            <input class="submit" type="submit" value="Update" />
        </form>
        
